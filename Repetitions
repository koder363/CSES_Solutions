import java.util.*;
import java.io.*;
 
 
class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String str = sc.next();
		int max = 0;
		char ch = '.';
		int length = 0;
		for(int i = 0; i < str.length(); i++){
			if(str.charAt(i) == ch){
				length++;
			}
			else{
				length = 1;
				ch = str.charAt(i);
			}
			max = Math.max(max, length);
		}
		System.out.println(max);
	}
