import java.util.*;
import java.io.*;
 
 
class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		long n = sc.nextInt();
		while(n > 1){
			System.out.print(n+" ");
			if(n%2 == 0){
				n = n/2;
			}
			else{
				n = (long)n*3+1;
			}
		}
		System.out.print(1);
	}
